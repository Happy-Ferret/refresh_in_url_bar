{
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "description": "Add a reload button in the URL bar. Forked from addon by Andrei Petcu to add stop button and use original Mozilla icons.",
    "homepage_url": "https://github.com/mpedrero/refresh_in_url_bar",
    "icons": {
        "128": "images/refresh.svg",
        "16": "images/refresh.svg",
        "48": "images/refresh.svg",
        "96": "images/refresh.svg"
    },
    "web_accessible_resources": [
        "images/refresh.svg",
        "images/cancel.svg"
      ],
    "manifest_version": 2,
    "name": "Reload page in URL bar",
    "page_action": {
        "default_icon": "images/refresh.svg"
    },
    "permissions": ["activeTab"],
    "version": "1.0.3"
}
